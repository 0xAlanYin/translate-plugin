{
  "manifest_version": 3,
  "name": "网页文本翻译",
  "version": "1.0",
  "description": "选中文本自动翻译成英文",
  "permissions": ["activeTab"],
  "host_permissions": [
    "*://*.translated.net/*",
    "*://*.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 